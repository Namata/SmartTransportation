<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beckie.smarttransportation" >

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity

            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Buses"
            android:label="@string/title_activity_buses" >
        </activity>
        <activity
            android:name=".BookBus"
            android:label="@string/title_activity_book_bus" >
        </activity>
        <activity
            android:name=".MainRoutes"
            android:label="@string/title_activity_main_routes"
            android:theme="@style/Base.Theme.AppCompat.Dialog">
        </activity>
    </application>

</manifest>
